<!DOCTYPE html>
{% block html %}
<html lang="{{ app.lang }}" class="{{ _htmlClass|default('') }}">
{% endblock %}
<head>

  {% block metas %}
    <meta charset="UTF-8"/>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
  {% endblock %}

  <title>{% block title %}Hello World!{% endblock %}</title>

  {% block favicon %}
    <link type="image/png" rel="icon" href="{{ asset('/favicon.png') }}">
    <link type="image/x-icon" rel="shortcut icon" href="{{ asset('/favicon.ico') }}"/>
  {% endblock %}

  {% block stylesheets %}
  {% endblock %}

</head>

{% block body %}
  <body class="{{ is_full_view() ? 'beats-html-body-full' : 'beats-html-body-mobile' }} {{ _bodyClass|default('') }}">

  {% block guts %}
  {% endblock %}

  {% block javascripts %}

    {% javascripts output="js/ecma-jquery.js"
    '@BeatsBundle/Resources/public/js/beats-can/v0.1/ecma-jquery.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

  {% endblock %}

  {% block jsTemplates %}
  {% endblock %}

  </body>
{% endblock %}
</html>
