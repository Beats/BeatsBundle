      {% for key in selected %}
        <span class="beats_field_tags-tag label" data-value="{{ key }}">
          {{ attribute(opts.options, key) }}
        </span>
      {% endfor %}
    </div>

    <div id="{{ opts.name ~ '-rejected' }}" class="beats_field_tags-rejected panel panel-default">
      {% for key in rejected %}
        <span class="beats_field_tags-tag label" data-value="{{ key }}">
          {{ attribute(opts.options, key) }}
