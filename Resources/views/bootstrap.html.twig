{% extends "BeatsBundle::html5.html.twig" %}

{% block metas %}
  {{ parent() }}
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
{% endblock %}

{% block stylesheets %}
  {{ parent() }}

  {% if app.debug %}
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.css"/>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css"/>
  {% else %}
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
  {% endif %}

{% endblock %}

{% block javascripts %}

  {% javascripts output="js/ecma-jquery-bootstrap.js"
  '@BeatsBundle/Resources/public/js/ecma-extend.js'
  '//code.jquery.com/jquery-1.11.2.js'
  '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.js' %}
  <script type="text/javascript" src="{{ asset_url }}"></script>
  {% endjavascripts %}

{% endblock %}
